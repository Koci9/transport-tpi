{
  "realm": "transport-tpi",
  "enabled": true,
  "sslRequired": "none",
  "registrationAllowed": false,

  "roles": {
    "realm": [
      { "name": "CLIENTE" },
      { "name": "OPERADOR" },
      { "name": "TRANSPORTISTA" },
      { "name": "ADMIN" }
    ]
  },

  "clients": [
    {
      "clientId": "transport-api",
      "name": "Transport API",
      "enabled": true,
      "publicClient": true,
      "protocol": "openid-connect",
      "redirectUris": [
        "*"
      ],
      "webOrigins": [
        "*"
      ],
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": false,
      "authorizationServicesEnabled": false,
      "fullScopeAllowed": true,
      "protocolMappers": [
        {
          "name": "roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "consentRequired": false,
          "config": {
            "multivalued": "true",
            "user.attribute": "role",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "claim.name": "roles",
            "jsonType.label": "String"
          }
        }
      ]
    }
  ],

  "users": [
    {
      "username": "cliente1",
      "enabled": true,
      "emailVerified": true,
      "email": "cliente1@example.com",
      "credentials": [
        {
          "type": "password",
          "value": "password"
        }
      ],
      "realmRoles": [
        "CLIENTE"
      ]
    },
    {
      "username": "operador1",
      "enabled": true,
      "emailVerified": true,
      "email": "operador1@example.com",
      "credentials": [
        {
          "type": "password",
          "value": "password"
        }
      ],
      "realmRoles": [
        "OPERADOR"
      ]
    },
    {
      "username": "transportista1",
      "enabled": true,
      "emailVerified": true,
      "email": "transportista1@example.com",
      "credentials": [
        {
          "type": "password",
          "value": "password"
        }
      ],
      "realmRoles": [
        "TRANSPORTISTA"
      ]
    },
    {
      "username": "admin1",
      "enabled": true,
      "emailVerified": true,
      "email": "admin1@example.com",
      "credentials": [
        {
          "type": "password",
          "value": "password"
        }
      ],
      "realmRoles": [
        "ADMIN"
      ]
    }
  ]
}